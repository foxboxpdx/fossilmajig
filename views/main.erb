<style>
div.row { 
  border: 1px solid;
  border-bottom: 0px;
}
.container div.row:last-child {
  border-bottom: 1px solid;
}
</style>
<div class="container">
    <div class="row">
        <div class="panel panel-info">
            <div class="panel-heading">
              <% if session[:alias].eql?('0') %>
                <h1 class="panel-title">User <%=username%>'s Fossils</h1>
              <% else %>
                <h1 class="panel-title"><%=session[:alias]%>'s Fossils</h1>
              <% end %>
            </div>
            <div class="panel-body" id="metadata" style="display: block;">
            <form action="/savedata" method="POST">
              <div class="row">
                <div class="col-md-2">
                  <h3>Got it?</h3>
                </div>
                <div class="col-md-2">
                  <h3>Extras?</h3>
                </div>
                <div class="col-md-8">
                  <h3>Fossil Name</h3>
                </div>
              </div>
              <% fossils.each do |fossil| %>
                <div class="row">
                 <div class="col-md-2">
                  <% if owned[fossil.id].eql?("1") %>
                     <input type="radio" value="1" name="owned[<%=fossil.id%>]" checked>Y
                     <input type="radio" value="0" name="owned[<%=fossil.id%>]">N
                  <% else %>
                     <input type="radio" value="1" name="owned[<%=fossil.id%>]">Y
                     <input type="radio" value="0" name="owned[<%=fossil.id%>]" checked>N
                  <% end %>
                 </div>
                 <div class="col-md-2">
                   <input type="text" size="1" name="extra[<%=fossil.id%>]" value="<%=extra[fossil.id]%>">
                 </div>
                 <div class="col-md-8">
                  <h4><%=fossil.name%></h4>
                 </div>
               </div>
             <% end %>
             <div class="row">
               <div class="col-md-11"> &nbsp; </div>
               <div class="col-md-1">
                 <button type="submit" class="btn btn-primary">Save</button>
               </div>
            </div>
            </form>
        </div>
    </div>
</div>
